<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostToFbActivity"
    android:orientation="vertical"
    android:background="@drawable/spirit_greenbg">

    <TextView
        android:id="@+id/fb_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share with facebook!"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="26sp"
        android:typeface="serif"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/fb_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="I want to watch this movie recently!"
        android:layout_marginVertical="50dp"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="shareToFacebook"
        android:text="Share with Facebook"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:backgroundTint="#99768336"/>


</LinearLayout>