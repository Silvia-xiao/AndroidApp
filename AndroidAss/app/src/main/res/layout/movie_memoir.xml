<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/boarder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mem_image_iv"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="2.8"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mem_movie_name_tv"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="MOVIE NAME"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:typeface="serif"/>
                <TextView
                    android:id="@+id/mem_release_date_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textStyle="italic"
                    android:textSize="13sp"
                    android:gravity="center"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/mem_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:isIndicator="true"
                android:layout_marginVertical="20dp"
                android:stepSize="0.5"
                android:numStars="5"
                style="@style/RadingStyle"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/mem_comment_tv"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textboarder"
                android:text="COMMENT"
                android:typeface="monospace" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Watch Date:"
            android:layout_marginLeft="10dp"
            android:typeface="serif"/>
        <TextView
            android:id="@+id/mem_watch_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2020-01-01"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cinema:"
            android:typeface="serif"/>
        <TextView
            android:id="@+id/mem_cin_position_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3145"/>
    </LinearLayout>

</LinearLayout>
