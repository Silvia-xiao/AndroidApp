<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CredentialActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/spirited_awaybgblue">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/cre_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0DFFEB3B"
        android:text="Credential Information"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#3F51B5"/>


    <EditText
        android:id="@+id/newName_et"
        android:layout_below="@+id/cre_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:typeface="serif"
        android:textColorHint="#3F51B5"
        android:textColor="#3F51B5"/>

    <EditText
        android:id="@+id/newPassword_et"
        android:layout_below="@+id/newName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:typeface="serif"
        android:textColorHint="#3F51B5"
        android:textColor="#3F51B5"/>
    <EditText
        android:layout_below="@+id/newPassword_et"
        android:id="@+id/confirmedPassword_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm your password"
        android:typeface="serif"
        android:textColorHint="#3F51B5"
        android:textColor="#3F51B5" />

    <Button
        android:id="@+id/final_sign_up_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmedPassword_et"
        android:background="#99F4CC54"
        android:text="SUBMIT"
        android:textStyle="italic"
        android:layout_marginVertical="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#3F51B5"
        android:typeface="serif"/>


</RelativeLayout>