<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spirit_greenbg"
    tools:context=".fragment.WatchlistFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_watchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="20sp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Watchlist"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#49451E"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/watchlist_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_watchlist"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scrollbars="vertical"
        android:divider="@drawable/divider"/>


</RelativeLayout>